<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.PlauSet">
    <Button
        android:id="@+id/bt_fanhui"
        android:layout_marginTop="5dp"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:background="@drawable/back"/>
    <TextView
        android:id="@+id/title_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="比赛设置"
        android:textSize="35sp"
        android:textColor="#3470d2"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:layout_alignParentEnd="true"
        android:background="@drawable/shape"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="28dp" />
    <ScrollView
        android:layout_marginTop="20px"
        android:layout_below="@+id/title_set"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/all"
        android:layout_below="@+id/title_set"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title_set"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="队名1"
                android:textColor="#111"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dm1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/editshape"
                android:layout_marginLeft="50dp"
                android:imeOptions="flagNoExtractUi"
                android:maxLength="10"
                android:hint="请输入队名" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="队名2"
                android:textColor="#111"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/editshape"
                android:layout_marginLeft="50dp"
                android:imeOptions="flagNoExtractUi"
                android:hint="请输入队名"
                android:maxLength="10" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单节时间"
                android:textColor="#111"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dj_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="52dp"
                android:background="@drawable/editshape"
                android:imeOptions="flagNoExtractUi"
                android:hint="请输入单节时间"
                android:inputType="number"
                android:maxLength="3" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一轮进攻时间"
                android:textColor="#111"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/jg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@drawable/editshape"
                android:hint="请输入一轮进攻时间"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"
                android:maxLength="3" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单节暂停数目"
                android:textColor="#111"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dj_zt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@drawable/editshape"
                android:inputType="number"
                android:imeOptions="flagNoExtractUi"
                android:maxLength="1"
                android:hint="请输入单节暂停数量"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单节犯规奖励"
                android:textColor="#111"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dj_fgjl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/editshape"
                android:layout_marginLeft="50dp"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"
                android:maxLength="2"
                android:hint="请输入单节犯规奖励" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单人犯满数"
                android:textColor="#111"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dr_fms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/editshape"
                android:layout_marginLeft="50dp"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"
                android:maxLength="2"
                android:hint="请输入单人犯满数"/>
        </LinearLayout>

    </LinearLayout>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>
