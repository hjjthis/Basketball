<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.jianyijifen">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/pinkbk"
        android:layout_width="0dp"
        android:layout_height="530px"
        android:layout_weight="1"
        android:background="@drawable/pink"/>
    <ImageView
        android:id="@+id/bluebk"
        android:layout_toRightOf="@+id/pinkbk"
        android:layout_width="0dp"
        android:layout_height="530px"
        android:layout_weight="1"

        android:background="@drawable/blue"/>
</LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginStart="50dp"
        android:text="A队"
        android:textColor="@color/white"
        android:textSize="120px" />
    <TextView
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="120px"
        android:textColor="@color/white"
        android:text="B队"
        android:id="@+id/textView" />
    <TextView
        android:id="@+id/Ascore"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="180px"
        android:textColor="@color/white"
       android:hint="00" />
    <TextView
        android:id="@+id/Bscore"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="150dp"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="180px"
        android:textColor="@color/white"
        android:hint="00" />
    <Button
        android:id="@+id/add1"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="700px"
        android:background="@drawable/addfen"/>
    <Button
        android:id="@+id/add2"
        android:layout_alignParentEnd="true"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_marginRight="100dp"
        android:layout_marginTop="700px"
        android:background="@drawable/addfen"/>
    <Button
        android:id="@+id/reback"
        android:layout_width="330px"
        android:layout_height="148px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/chehui"/>
</RelativeLayout>
